<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="NegativeLoginTestSuite" verbose="1" parallel = "tests" thread-count="4">

    <test name="NegativeUsernameTest-chrome">
        <parameter name="username" value="incorrectUsername"></parameter>
        <parameter name="password" value="SuperSecretPassword!"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.login_page_tests.NegativeLoginTest">
            </class>
        </classes>
    </test>
    <test name="NegativeUsernameTest-opera">
        <parameter name="username" value="incorrectUsername"></parameter>
        <parameter name="password" value="SuperSecretPassword!"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
        <parameter name="browser" value="opera"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.login_page_tests.NegativeLoginTest">
            </class>
        </classes>
    </test>

    <test name="NegativePasswordTest-chrome">
        <parameter name="username" value="tomsmith"></parameter>
        <parameter name="password" value="incorrectPassword"></parameter>
        <parameter name="expectedMessage" value="Your password is invalid!"></parameter>
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.login_page_tests.NegativeLoginTest">
            </class>
        </classes>
    </test>

    <test name="NegativePasswordTest-opera">
        <parameter name="username" value="tomsmith"></parameter>
        <parameter name="password" value="incorrectPassword"></parameter>
        <parameter name="expectedMessage" value="Your password is invalid!"></parameter>
        <parameter name="browser" value="opera"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.login_page_tests.NegativeLoginTest">
            </class>
        </classes>
    </test>

</suite>